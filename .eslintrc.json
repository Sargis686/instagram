{
  "extends": [
    "next/core-web-vitals",
    "@it-incubator/eslint-config",
    "plugin:storybook/recommended"
  ],
  "rules": {
    "react/jsx-curly-brace-presence": "off",
    "import/no-named-as-default": 0,
    "react-hooks/exhaustive-deps": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
